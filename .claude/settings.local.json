{
  "permissions": {
    "allow": [
      "Bash(npm run build:*)",
      "Bash(npm test)",
      "Bash(npx tsc:*)",
      "Bash(npm test:*)",
      "Bash(node:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(vercel ls:*)",
      "Bash(mkdir:*)",
      "Bash(gh pr view:*)",
      "Bash(git log:*)",
      "Bash(git checkout:*)",
      "Bash(gh pr edit:*)",
      "Bash(vercel inspect:*)",
      "Bash(vercel logs:*)",
      "Bash(find:*)",
      "SlashCommand(/commit-commands:commit)",
      "WebSearch"
    ],
    "deny": [],
    "ask": []
  },
  "statusLine": {
    "type": "command",
    "command": "BRANCH=$(git branch --show-current 2>/dev/null); PATH=$(echo $PWD | sed \"s|$HOME|~|\"); if [ -n \"$BRANCH\" ]; then echo \"$PATH ($BRANCH)\"; else echo \"$PATH\"; fi"
  }
}
